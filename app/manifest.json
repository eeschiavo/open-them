{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/16x16.png",
    "19": "images/19x19.png",
    "38": "images/38x38.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "default_locale": "it",
  "background": {
    "scripts": [
      "libs/polyfill.min.js",
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "history",
    "topSites",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/16x16.png",
      "19": "images/19x19.png",
      "38": "images/38x38.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    }
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
